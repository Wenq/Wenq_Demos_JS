{
    "manifest_version": 3,
    "name": "一键复制页签",
    "version": "0.1",
    "description": "复制当前页签url地址,自动新建浏览器页签并打开该地址",
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "action": {
        "default_icon": "icons/icon.png",
        "default_title": "一键复制页签",
        "chrome_style": false
    },
    "background": {
        "type": "module",
        "service_worker": "background/service_worker.js"
    },
    "permissions": [
        "notifications",
        "tabs"
    ]
}